<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Sports Scheduler</title>
  <style>
    /* Body styles */
    body {
      background-color: #F8F4EE; /* Light coffee cream */
      color: #362F2D; /* Dark coffee brown */
      font-family: Arial, sans-serif;
    }

    /* Container styles */
    .container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #E3D7C6; /* Light coffee brown */
      border-radius: 8px;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
    }

    /* Heading styles */
    h1 {
      color: #4C2F27; /* Dark coffee brown */
      margin-top: 20px;
      margin-bottom: 10px;
    }

    /* List styles */
    ul {
      list-style-type: none;
      margin: 0;
      padding: 0;
    }

    .button {
            display: inline-block;
            background-color: #563D23; /* Coffee color shade for buttons */
            color: #F5F0E1; /* Coffee color shade for button text */
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .button:hover {
            background-color: #8F6C53; /* Darker coffee color shade on button hover */
        }

    .sport-item {
            background-color: #E3D7C6; /* Coffee color shade for sport items */
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 8px;
        }

    .sport-item a:hover {
      color: #69482E; /* Dark coffee brown on hover */
    }

    /* Message styles */
    .text-xl {
      font-size: 20px;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <% if (sportDetails.length > 0) { %>
      <h3>Sports Created By You </h3>
      <ul>
        <% for (var i = 0; i < sportDetails.length; i++) { %>
          <% if (getUser.id == sportDetails[i].userId) { %>
            
            <li class="sport-item">
              <a href="/sportPage/<%= sportDetails[i].id %>"  class="button">
                <%= sportDetails[i].sport_name %>
              </a>
            </li>
          <% } %>
        <% } %>
      </ul>

      <h3>Available sports </h3>
      <ul>
        <% for (var i = 0; i < sportDetails.length; i++) { %>
          <% if (getUser.id != sportDetails[i].userId) { %>
            <li class="sport-item">
              <a href="/sportPage/<%= sportDetails[i].id %>"  class="button">
                <%= sportDetails[i].sport_name %>
              </a>
            </li>
          <% } %>
        <% } %>
      </ul>
    <% } else { %>
      <p class="text-xl">There are no sports currently available.</p>
    <% } %>
  </div>
</body>
</html>
