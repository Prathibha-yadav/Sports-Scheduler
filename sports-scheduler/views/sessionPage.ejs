<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Session Page</title>
    <style>
        body {
            background-color: #F5F0E1;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
        }
        h4 {
            color: #4d4030;
            margin-top: 0;
        }
        p {
            margin: 5px 0;
        }
        div {
            background-color: #F5F0E1;
            padding: 20px;
            margin-bottom: 20px;
            border-radius: 20px;
        }
        h3 {
            color: #4d4030;
            margin-top: 0;
        }
        form {
            margin-top: 2px;
        }
        input[type="submit"] {
            background-color: #745c44;
            color: #fdf2e9;
            border: none;
            padding: 20px;
            border-radius: 3px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        input[type="submit"]:hover {
            background-color: #4d4030;
        }
        input[type="hidden"] {
            display: none;
        }
    </style>
</head>
<body>
    <h4>Available <%= current_sport.sport_name %> sessions</h4>
    <% for (var i = 0; i < sessionDetails.length; i++) { %>
        <div>
            <h3>Session # <%= sessionDetails[i].id %></h3>
            <p>Sport Name: <%= current_sport.sport_name %></p>
            <p>Time: <%= new Date(sessionDetails[i].time).toLocaleString('en-US', { dateStyle: 'full', timeStyle: 'medium' }) %></p>
            <p>Venue: <%= sessionDetails[i].venue %></p>
            <p>Players: <%= sessionDetails[i].players %></p>
            <p>Players: <%= sessionDetails[i].players.length %> / <%= sessionDetails[i].playerCount %></p>
            <% if (user) { %>
                <% const isPlayerJoined = sessionDetails[i].players.includes(user.firstname); %>
                <% if (!isPlayerJoined) { %>
                    <form action="/join-session" method="POST">
                        <input type="hidden" name="sessionId" value="<%= sessionDetails[i].id %>">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="submit" value="Join Session">
                    </form>
                <% } else { %>
                    <p>You have already joined this session.</p>
                    <form action="/leave-session" method="POST">
                        <input type="hidden" name="sessionId" value="<%= sessionDetails[i].id %>">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <input type="submit" value="Leave Session">
                    </form>
                <% } %>
            <% } %>
        </div>
    <% } %>
</body>
</html>
