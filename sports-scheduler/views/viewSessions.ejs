<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body {
            background-color: #EEECE9;
            color: #6B4E3D;
            font-family: Arial, sans-serif;
        }

        .mt-5 {
            margin-top: 2.5rem;
        }

        .text-indigo-700 {
            color: #3B3F52;
        }

        .font-bold {
            font-weight: bold;
        }

        .mb-4 {
            margin-bottom: 1rem;
        }

        .list-disc {
            list-style-type: disc;
            margin-left: 2rem;
        }

        .Session-Item {
            background-color: #D1B7A0;
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 0.5rem;
        }

        .flex {
            display: flex;
        }

        .items-center {
            align-items: center;
        }

        .py-1 {
            padding-top: 0.25rem;
            padding-bottom: 0.25rem;
        }

        .px-2 {
            padding-left: 0.5rem;
            padding-right: 0.5rem;
        }

        .my-1 {
            margin-top: 0.25rem;
            margin-bottom: 0.25rem;
        }

        .text-xl {
            font-size: 1.25rem;
        }

        .hover\:underline:hover {
            text-decoration: underline;
        }

        .text-coffee-light {
            color: #BFA390;
        }

        .text-coffee-dark {
            color: #6B4E3D;
        }

        /* New styles */

        a {
            display: inline-block;
            padding: 0.5rem 1rem;
            background-color: #BFA390;
            color: white;
            text-decoration: none;
            border-radius: 0.5rem;
            margin-bottom: 0.5rem;
        }

        .Session-Item {
            background-color: #6B4E3D;
            color: white;
            padding: 1rem;
            margin-bottom: 1rem;
            border-radius: 0.5rem;
        }

        .text-xl {
            font-size: 1.5rem;
        }

        .text-coffee-light {
            color: #BFA390;
        }

        .text-coffee-dark {
            color: #6B4E3D;
        }
    </style>
</head>
<body>
    <div class="mt-5">
        <% if (data.length > 0) { %>
            <h1 class="text-2xl text-indigo-700 font-bold mb-4">Created by you</h1>
            <ul class="list-disc">
                <% for (var i = 0; i < data.length; i++) { %>
                    <% if (userid == data[i].userId && sportid == data[i].sportId) { %>
                      <% var emptySlots = data[i].playerCount; %>
                      <li class="Session-Item">
                        <a class="flex items-center py-1 px-2 my-1 text-xl hover:underline" href="/sessionPage/<%= data[i].id %>">
                          Session # <%= data[i].id %> - Empty Slots: <%= emptySlots %>
                          <div>
                            <p class="text-coffee-dark">Time: <%= new Date(data[i].time).toLocaleString('en-US', { dateStyle: 'full', timeStyle: 'medium' }) %></p>
                          </div>
                        </a>
                      </li>
                    <% } %>
                  <% } %>
                  
            </ul>
            <h1 class="text-2xl text-indigo-700 font-bold mb-4">Other Sessions</h1>
            <ul class="list-disc">
                <% for (var i = 0; i < data.length; i++) { %>
                    <% if (userid == data[i].userId && sportid == data[i].sportId) { %>
                      <% var emptySlots = data[i].playerCount; %>
                      <li class="Session-Item">
                        <a class="flex items-center py-1 px-2 my-1 text-xl hover:underline" href="/sessionPage/<%= data[i].id %>">
                          Session # <%= data[i].id %> - Empty Slots: <%= emptySlots %>
                          <div>
                            <p class="text-coffee-dark">Time: <%= new Date(data[i].time).toLocaleString('en-US', { dateStyle: 'full', timeStyle: 'medium' }) %></p>
                          </div>
                        </a>
                      </li>
                    <% } %>
                  <% } %>
                  
            </ul>
        <%} else { %>
            <p class="text-xl">There are no sessions available to join right now. Create one?</p>
        <% } %>    
    </div>
</body>
</html>
